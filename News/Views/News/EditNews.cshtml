@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model News.ViewModels.NewsViewModel

<h3>@Model.Header</h3>
<div class="row justify-content-center">
    <img class="img-fluid" style="max-width:1110px; max-height: 625px;" src=@Model.Image />
</div>


<h2 class="display-5">@Localizer["Editing"]</h2>
<form enctype="multipart/form-data" method="post" asp-action="EditNews" asp-controller="News" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <input type="hidden" asp-for="Id" value=@Model.Id />
    <br class="breadcrumb">
    <div class="form-group">
        <label asp-for="Header">@Localizer["EnterHeader"]</label>
        <input type="text" asp-for="Header" class="form-control" placeholder=@Model.Header>
        <span asp-validation-for="Header" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Subtitle">@Localizer["EnterSubtitle"]</label>
        <textarea type="text" asp-for="Subtitle" class="form-control" placeholder=@Model.Subtitle></textarea>
        <span asp-validation-for="Subtitle" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Text">@Localizer["EnterText"]</label>
        <textarea type="text" asp-for="Text" class="form-control" placeholder=@Model.Text></textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image"></label>
        <div class="custom-file">
            <input type="file" class="custom-file-input" id="customFile">
            <label class="custom-file-label form-control shadow-sm bg-white rounded" for="customFile">@Localizer["SelectFile"]</label>
            <input type="hidden" id="file-upload-url" asp-for="Image" value="@Model.Image" />
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="card border-white mt-1">
            <img src="@Model.Image" id="img-preview" />
        </div>
    </div>

    <button type="submit" class="btn btn-primary">@Localizer["Update"]</button>

</form>