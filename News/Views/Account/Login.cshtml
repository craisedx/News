@model News.ViewModels.LoginViewModel

@{
    Layout = null;
    ViewData["Title"] = "Sign In";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css2?family=Imperial+Script&display=swap" rel="stylesheet">
</head>
<div id="signIn" class="container p-xl-3">
    <div class="row justify-content-lg-center">
        <div class="col-lg-8 text-lg-center pb-4">
            <h2 class="h4">Вход</h2>
        </div>
    </div>
    <div class="row justify-content-lg-center">
        <div class="col-lg-6 mt-2">
            <form class="form-group" method="post" asp-controller="Account" asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input class="form-control shadow-sm bg-white rounded-pill" asp-for="Email" placeholder="Введите логин">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input class="form-control shadow-sm bg-white rounded-pill" asp-for="Password" placeholder="Введите пароль">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-block rounded shadow-sm rounded-pill" style="background-color: #6e7fab">Войти</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="row justify-content-lg-center pt-5">
    <div class="col-lg-8 text-lg-center">
        <h6 class="h6">Впервые на News? <a asp-controller="Account" asp-action="Register">Создайте аккаунт</a>.</h6>
    </div>
</div>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<style>
    body {
        margin: 0px;
    }
</style>